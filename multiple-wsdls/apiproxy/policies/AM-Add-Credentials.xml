<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AM-Add-Credentials">
    <DisplayName>AM Add Authorization</DisplayName>
    <Properties/>
    <Add>
        <Headers>
            <!-- Base64 encoded servcie account and password -->
            <Header name="Authorization">Basic dXNlcm5hbWU6cGFzc3dvcmQ=</Header>
        </Headers>
    </Add>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>